{
  "name": "dota2.ru_ext",
  "version": "3.0.21",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:chrome": "ts-node --project tsconfig.node.json esbuild.config.ts chrome dev",
    "dev:firefox": "ts-node --project tsconfig.node.json esbuild.config.ts firefox dev",
    "build:chrome": "ts-node --project tsconfig.node.json esbuild.config.ts chrome production",
    "build:firefox": "ts-node --project tsconfig.node.json esbuild.config.ts firefox production",
    "build:chrome:zip": "mkdir -p dist && zip -r dist/chrome.zip dist/chrome",
    "build:firefox:zip": "mkdir -p dist && zip -r dist/firefox.zip dist/firefox",
    "build:project:zip": "mkdir -p dist && zip -r dist/project.zip . -x \"*.git/*\" -x \".idea/*\" -x \".kilocode/*\" -x \"node_modules/*\" -x \"package-lock.json\" -x \"build/*\""
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/chrome": "^0.1.22",
    "@types/dexie": "^1.3.32",
    "@types/node": "^24.7.0",
    "@types/socket.io-client": "^1.4.36",
    "@types/ws": "^8.18.1",
    "@vue/compiler-sfc": "^3.5.22",
    "dexie": "^4.2.1",
    "esbuild": "^0.25.10",
    "esbuild-plugin-vue3": "^0.4.2",
    "prettier": "^3.6.2",
    "sass": "^1.78.0",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vue": "^3.5.0",
    "ws": "^8.18.3"
  },
  "dependencies": {
  }
}
